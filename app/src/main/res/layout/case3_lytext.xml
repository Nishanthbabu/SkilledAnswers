<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="India won the asia cup again."
        android:id="@+id/case3_lytext_headingTextviewID" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="start"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Textfffffffffffffffffffffffffffffffffffffff  fffffkwueogeg  uedeu  uguegfuf   ugedgfeuwig   geugugugd  dueddd  duedhued   bduegdffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:id="@+id/case3_lytext_shortdescriptionTextviewID" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_weight="0.4"
        android:textColor="#AF11"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/case3_lytext_timestampID" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/seen"
        android:layout_weight="1"
        android:visibility="invisible"
        android:id="@+id/case3_lytext_seenImageID"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>