<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stevejobs"
        android:scaleType="fitXY"
        android:id="@+id/case1_texton_image_imageviewID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#ffff"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:id="@+id/case1_texton_image_textviewID"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/case1_texton_image_imageviewID"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="0.45"
            android:textColor="#AF11"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/case1_texton_image__timestampID" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/seen"
            android:layout_weight="0.9"
            android:visibility="invisible"
            android:id="@+id/case1_texton_image__seenImageID"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>